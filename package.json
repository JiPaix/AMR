{
  "name": "all-mangas-reader-desktop",
  "description": "Read your favorite manga from your favorite website, keep track of your reading progress and share your reading history with your friends.",
  "author": "some People",
  "homepage": "https://homepage.com",
  "repository": "github:JiPaix/AMR",
  "license": "MIT",
  "version": "0.2.62",
  "private": false,
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer && npm run build:api",
    "build:api": "cd ./packages/api && vite build",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:preload:types": "dts-cb -i \"packages/preload/tsconfig.json\" -o \"packages/preload/exposedInMainWorld.d.ts\"",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "watch": "npm run build:api && node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck:api": "tsc --noEmit -p packages/api/tsconfig.json",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "npm run build:preload:types && vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer && npm run typecheck:api"
  },
  "devDependencies": {
    "@intlify/vite-plugin-vue-i18n": "^3.4.0",
    "@mdi/font": "^6.6.96",
    "@mdi/js": "^6.6.96",
    "@openapitools/openapi-generator-cli": "^2.5.1",
    "@quasar/extras": "^1.13.6",
    "@quasar/vite-plugin": "^1.0.9",
    "@swc/core": "^1.2.174",
    "@types/express": "^4.17.13",
    "@types/lowdb": "^1.0.11",
    "@types/morgan": "^1.9.3",
    "@types/node-forge": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vitejs/plugin-vue": "2.3.1",
    "@vue/test-utils": "2.0.0-rc.21",
    "@vueuse/core": "^8.3.1",
    "cross-env": "7.0.3",
    "dts-for-context-bridge": "0.7.1",
    "electron": "^18.2.0",
    "electron-builder": "^23.0.3",
    "electron-devtools-installer": "3.2.0",
    "electron-updater": "5.0.1",
    "eslint": "8.14.0",
    "eslint-plugin-vue": "8.7.1",
    "express": "^4.18.1",
    "happy-dom": "3.1.0",
    "nano-staged": "0.8.0",
    "nock": "^13.2.4",
    "pinia": "^2.0.13",
    "playwright": "^1.21.1",
    "quasar": "^2.6.6",
    "simple-git": "^3.7.1",
    "simple-git-hooks": "2.7.0",
    "typescript": "4.6.4",
    "vite": "2.9.6",
    "vite-plugin-node": "^0.0.19",
    "vitest": "0.10.0",
    "vue": "^3.2.31",
    "vue-i18n": "^9.1.9",
    "vue-tsc": "0.34.11"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "cheerio": "^1.0.0-rc.10",
    "dayjs": "^1.11.1",
    "file-type": "^17.1.1",
    "flag-icons": "^6.2.0",
    "lowdb": "^3.0.0",
    "morgan": "^1.10.0",
    "node-forge": "^1.3.1",
    "puppeteer-cluster": "^0.23.0",
    "puppeteer-extra": "^3.2.3",
    "puppeteer-extra-plugin-adblocker-no-vulnerabilities": "^2.12.2",
    "puppeteer-extra-plugin-stealth": "^2.9.0",
    "socket.io": "^4.5.0",
    "socket.io-client": "^4.5.0",
    "systeminformation": "^5.11.14",
    "vue-router": "^4.0.14"
  }
}
