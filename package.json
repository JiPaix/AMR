{
  "name": "all-mangas-reader-desktop",
  "description": "Read your favorite manga from your favorite website, keep track of your reading progress and share your reading history with your friends.",
  "author": "some People",
  "homepage": "https://homepage.com",
  "repository": "github:JiPaix/AMR",
  "license": "MIT",
  "version": "0.2.0",
  "private": false,
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer && npm run build:api && npm run build:openAPI",
    "build:api": "cd ./packages/api && vite build",
    "build:openAPI": "cd ./packages/api && npm run build:openAPI:yaml && npm run build:openAPI:html",
    "build:openAPI:yaml": "cd ./packages/api && npx @airtasker/spot generate --contract scripts/openAPI.ts --language yaml --generator openapi3 --out docs",
    "build:openAPI:html": "cd ./packages/api && npx @openapitools/openapi-generator-cli generate -i docs/openAPI.yml -g html2 -o docs/API",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:preload:types": "dts-cb -i \"packages/preload/tsconfig.json\" -o \"packages/preload/exposedInMainWorld.d.ts\"",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "watch": "npm run build:api && node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck:api": "tsc --noEmit -p packages/api/tsconfig.json",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "npm run build:preload:types && vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer"
  },
  "devDependencies": {
    "@airtasker/spot": "^1.9.0",
    "@intlify/vite-plugin-vue-i18n": "^3.3.1",
    "@mdi/font": "^6.5.95",
    "@mdi/js": "^6.6.95",
    "@openapitools/openapi-generator-cli": "^2.4.26",
    "@quasar/extras": "^1.13.3",
    "@quasar/vite-plugin": "^1.0.7",
    "@swc/core": "^1.2.160",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/chalk": "^2.2.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/lodash": "^4.14.180",
    "@types/lowdb": "^1.0.11",
    "@types/morgan": "^1.9.3",
    "@types/node-forge": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vitejs/plugin-vue": "2.2.4",
    "@vue/test-utils": "2.0.0-rc.18",
    "@vueuse/core": "^8.2.0",
    "body-parser": "^1.19.2",
    "chalk": "^5.0.1",
    "cors": "^2.8.5",
    "cross-env": "7.0.3",
    "dts-for-context-bridge": "0.7.1",
    "electron": "^17.2.0",
    "electron-builder": "22.14.13",
    "electron-devtools-installer": "3.2.0",
    "electron-updater": "4.6.5",
    "eslint": "8.12.0",
    "eslint-plugin-vue": "8.5.0",
    "express": "^4.17.3",
    "happy-dom": "2.50.0",
    "helmet": "^5.0.2",
    "morgan": "^1.10.0",
    "nano-staged": "0.6.0",
    "nock": "^13.2.4",
    "pinia": "^2.0.12",
    "playwright": "1.20.1",
    "quasar": "^2.6.1",
    "simple-git-hooks": "2.7.0",
    "typescript": "4.6.3",
    "vite": "2.8.6",
    "vite-plugin-node": "^0.0.18",
    "vitest": "0.7.11",
    "vue": "3.2.31",
    "vue-i18n": "^9.1.9",
    "vue-tsc": "0.33.9"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "cheerio": "^1.0.0-rc.10",
    "node-forge": "^1.3.0",
    "puppeteer-cluster": "^0.23.0",
    "puppeteer-extra": "^3.2.3",
    "puppeteer-extra-plugin-adblocker-no-vulnerabilities": "^2.12.2",
    "puppeteer-extra-plugin-stealth": "^2.9.0",
    "sharp": "^0.30.3",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1",
    "systeminformation": "^5.11.9"
  }
}
